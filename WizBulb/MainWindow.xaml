<Window
    x:Class="WizBulb.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:WizBulb.Behaviors"
    xmlns:color="clr-namespace:DataTools.ColorControls;assembly=DataTools.ColorControls"
    xmlns:controls="clr-namespace:WizBulb.Controls"
    xmlns:conv="clr-namespace:WizBulb.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:i18n="clr-namespace:WizBulb.Localization"
    xmlns:local="clr-namespace:WizBulb"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wiz="clr-namespace:WiZ;assembly=WiZ"
    Title="{Binding WindowTitle}"
    Width="630"
    Height="600"
    Icon="pack://application:,,,/WizBulb;component/Resources/wiz.ico"
    Keyboard.PreviewKeyDown="Window_PreviewKeyDown"
    mc:Ignorable="d">

    <Window.Resources>
        <ResourceDictionary>

            <conv:ProfilePartsConverter x:Key="roomConv" Part="Room" />

            <conv:ProfilePartsConverter x:Key="homeConv" Part="Home" />

            <conv:SelectionConverter
                x:Key="visConv"
                MultiSelectVisibility="Visible"
                NonVisibility="Collapsed"
                Visibility="Visible" />

            <conv:SelectionConverter
                x:Key="nameStatConv"
                MultiSelectVisibility="Visible"
                NonVisibility="Collapsed"
                Visibility="Collapsed" />

            <conv:SelectionConverter
                x:Key="nameEdConv"
                MultiSelectVisibility="Collapsed"
                NonVisibility="Collapsed"
                Visibility="Visible" />

            <conv:EmptyToVisibilityConverter x:Key="emptyVis" />

            <conv:DistanceConverter x:Key="distConv" AsFeet="True" />
            <conv:MacAddrConverter x:Key="macConv" />
            <conv:EnumConverter x:Key="enumConv" />
            <conv:IntDisplayConverter
                x:Key="intConv"
                MaxValue="360"
                MinValue="1" />

            <Style x:Key="BigStyle" TargetType="Label">
                <Setter Property="FontSize" Value="14" />
            </Style>

            <Style x:Key="BigEditStyle" TargetType="TextBox">
                <Setter Property="FontSize" Value="14" />
            </Style>

            <DataTemplate x:Key="HeaderTemplateArrowUp">
                <DockPanel>
                    <TextBlock HorizontalAlignment="Center" Text="{Binding}" />
                    <Path
                        x:Name="arrow"
                        Data="M 5,10 L 15,10 L 10,5 L 5,10"
                        Fill="gray"
                        StrokeThickness="1" />
                </DockPanel>
            </DataTemplate>

            <DataTemplate x:Key="HeaderTemplateArrowDown">
                <DockPanel>
                    <TextBlock HorizontalAlignment="Center" Text="{Binding}" />
                    <Path
                        x:Name="arrow"
                        Data="M 5,5 L 15,5 L 10,10 L 5,5"
                        Fill="gray"
                        StrokeThickness="1" />
                </DockPanel>
            </DataTemplate>

            <conv:ColorBrushConverter x:Key="colorConv" />

            <Style TargetType="Button">

                <Setter Property="Background" Value="DarkSlateBlue" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Padding" Value="8" />
            </Style>

            <DataTemplate x:Key="DistanceTemplate">
                <StackPanel Orientation="Horizontal">
                    <controls:FadingTextBlock Text="{Binding Settings.Distance, Converter={StaticResource distConv}}" />
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="BulbTemplate">
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="32" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Border
                        Width="24"
                        Height="24"
                        Margin="4"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="{Binding Settings.Color, Converter={StaticResource colorConv}}"
                        BorderBrush="Gray"
                        BorderThickness="1" />

                    <Label
                        Grid.Column="1"
                        Margin="4"
                        Background="Transparent"
                        BorderThickness="0"
                        Content="{Binding Name}" />
                </Grid>
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="AliceBlue">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="220" />
        </Grid.ColumnDefinitions>

        <GridSplitter
            Grid.Row="1"
            Grid.Column="1"
            Width="2"
            VerticalAlignment="Stretch"
            Background="Black"
            Opacity="0.10" />

        <Menu
            Grid.Row="0"
            Grid.ColumnSpan="4"
            Padding="4"
            Background="Transparent"
            FontSize="14">
            <MenuItem x:Name="mnuFile" Header="_File">
                <MenuItem
                    x:Name="mnuOpenProject"
                    Click="mnuOpenProject_Click"
                    Header="_Open Project"
                    InputGestureText="Ctrl+O" />

                <MenuItem
                    x:Name="mnuNewProject"
                    Click="mnuNewProject_Click"
                    Header="_New Project"
                    InputGestureText="Ctrl+N" />

                <Separator />

                <MenuItem x:Name="mnuRecents" Header="Recent Projects" />

                <Separator />

                <MenuItem
                    x:Name="mnuSaveProject"
                    Click="mnuSaveProject_Click"
                    Header="_Save Project"
                    InputGestureText="Ctrl+S" />

                <MenuItem
                    x:Name="mnuSaveAs"
                    Click="mnuSaveAs_Click"
                    Header="_Save As..."
                    InputGestureText="Ctrl+Shift+S" />

                <Separator />

                <MenuItem
                    x:Name="mnuLoadLast"
                    Checked="mnuLoadLast_Checked"
                    Header="_Load Last Project on Startup"
                    IsCheckable="True" />
                <Separator />

                <MenuItem
                    x:Name="mnuQuit"
                    Click="mnuQuit_Click"
                    Header="_Quit"
                    InputGestureText="Ctrl+Q" />
                <Separator />
            </MenuItem>
        </Menu>

        <TabControl
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="8,2,8,8">

            <TabItem>
                <TabItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Image
                            x:Name="BulbTabHdr"
                            Grid.Column="0"
                            Margin="4"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Source="pack://application:,,,/WizBulb;component/Resources/lightbulb.png" />

                        <TextBlock
                            Grid.Column="1"
                            Margin="2,4,4,4"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="10"
                            Text="{i18n:Translate ResourceKey=Bulbs}" />
                    </Grid>
                </TabItem.Header>

                <ListView
                    x:Name="BulbList"
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Margin="0"
                    BorderThickness="0"
                    Foreground="Black"
                    GridViewColumnHeader.Click="BulbList_Click"
                    ItemsSource="{Binding Bulbs}"
                    SelectedItem="{Binding SelectedBulb, Mode=TwoWay}">

                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem
                                x:Name="mnuPing"
                                Click="mnuPing_Click"
                                Header="{i18n:Translate ResourceKey=PingBulb}" />

                            <Separator />

                            <MenuItem x:Name="mnuModes" Header="{i18n:Translate ResourceKey=LightModes}" />

                            <Separator />

                            <MenuItem
                                x:Name="mnuPower"
                                Header="{i18n:Translate ResourceKey=IsPoweredOn}"
                                IsCheckable="True"
                                IsChecked="{Binding SelectedBulb.IsPoweredOn, Mode=TwoWay}" />

                            <Separator />

                            <MenuItem
                                x:Name="mnuRefresh"
                                Click="mnuRefresh_Click"
                                Header="{i18n:Translate ResourceKey=Refresh}" />

                            <MenuItem
                                x:Name="mnuRefreshAll"
                                Click="mnuRefreshAll_Click"
                                Header="{i18n:Translate ResourceKey=RefreshAll}" />

                            <Separator />

                            <MenuItem
                                x:Name="mnuTestCycle"
                                Click="mnuTestCycle_Click"
                                Header="{i18n:Translate ResourceKey=TestCycles}" />
                        </ContextMenu>
                    </ListView.ContextMenu>

                    <ListView.View>
                        <GridView AllowsColumnReorder="True">
                            <GridViewColumn
                                Width="120"
                                CellTemplate="{StaticResource BulbTemplate}"
                                Header="{i18n:Translate ResourceKey=Bulbs}" />
                            <GridViewColumn
                                Width="100"
                                DisplayMemberBinding="{Binding IPAddress}"
                                Header="{i18n:Translate ResourceKey=IPAddress}" />
                            <GridViewColumn
                                Width="100"
                                DisplayMemberBinding="{Binding MACAddress}"
                                Header="{i18n:Translate ResourceKey=MACAddress}" />
                            <GridViewColumn
                                Width="120"
                                DisplayMemberBinding="{Binding Scene}"
                                Header="{i18n:Translate ResourceKey=LightMode}" />
                            <GridViewColumn
                                Width="120"
                                DisplayMemberBinding="{Binding Settings.HomeId, Converter={StaticResource homeConv}}"
                                Header="{i18n:Translate ResourceKey=Home}" />
                            <GridViewColumn
                                Width="120"
                                DisplayMemberBinding="{Binding Settings.RoomId, Converter={StaticResource roomConv}}"
                                Header="{i18n:Translate ResourceKey=Room}" />
                            <GridViewColumn
                                Width="120"
                                DisplayMemberBinding="{Binding Settings.ModuleName}"
                                Header="{i18n:Translate ResourceKey=ModuleName}" />
                            <GridViewColumn
                                Width="120"
                                DisplayMemberBinding="{Binding Settings.TypeDescription}"
                                Header="{i18n:Translate ResourceKey=BulbType}" />
                            <GridViewColumn
                                Width="120"
                                CellTemplate="{StaticResource DistanceTemplate}"
                                Header="{i18n:Translate ResourceKey=Distance}" />
                            <GridViewColumn
                                Width="120"
                                DisplayMemberBinding="{Binding Settings.Brightness}"
                                Header="{i18n:Translate ResourceKey=Brightness}" />
                            <GridViewColumn
                                Width="120"
                                DisplayMemberBinding="{Binding Settings.Speed}"
                                Header="{i18n:Translate ResourceKey=Speed}" />
                            <GridViewColumn
                                Width="120"
                                DisplayMemberBinding="{Binding Settings.FirmwareVersion}"
                                Header="{i18n:Translate ResourceKey=FirmwareVersion}" />

                            <GridViewColumn
                                Width="120"
                                DisplayMemberBinding="{Binding Settings.DriverConfig}"
                                Header="{i18n:Translate ResourceKey=DriverConfig}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Image
                            x:Name="HomeTabHdr"
                            Grid.Column="0"
                            Margin="4"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />

                        <TextBlock
                            Grid.Column="1"
                            Margin="2,4,4,4"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="10"
                            Text="{i18n:Translate ResourceKey=Homes}" />
                    </Grid>
                </TabItem.Header>

                <ListView
                    x:Name="HomeList"
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Margin="0"
                    BorderThickness="0"
                    GridViewColumnHeader.Click="HomeList_Click"
                    ItemsSource="{Binding Homes}"
                    SelectedItem="{Binding SelectedHome, Mode=TwoWay}"
                    SelectionChanged="HomeList_SelectionChanged">

                    <ListView.View>
                        <GridView AllowsColumnReorder="True">
                            <GridViewColumn
                                Width="120"
                                DisplayMemberBinding="{Binding Name}"
                                Header="{i18n:Translate ResourceKey=Name}" />
                            <GridViewColumn
                                Width="120"
                                DisplayMemberBinding="{Binding HomeId}"
                                Header="{i18n:Translate ResourceKey=HomeId}" />
                            <GridViewColumn
                                Width="100"
                                DisplayMemberBinding="{Binding Rooms.Count}"
                                Header="{i18n:Translate ResourceKey=Rooms}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Image
                            x:Name="RoomTabHdr"
                            Grid.Column="0"
                            Margin="4"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />

                        <TextBlock
                            Grid.Column="1"
                            Margin="2,4,4,4"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="10"
                            Text="{i18n:Translate ResourceKey=Rooms}" />
                    </Grid>
                </TabItem.Header>

                <ListView
                    x:Name="RoomList"
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Margin="0"
                    BorderThickness="0"
                    GridViewColumnHeader.Click="RoomList_Click"
                    ItemsSource="{Binding Rooms}"
                    SelectedItem="{Binding SelectedRoom, Mode=TwoWay}"
                    SelectionChanged="RoomList_SelectionChanged">

                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem x:Name="mnuRoomModes" Header="{i18n:Translate ResourceKey=LightModes}" />

                            <Separator />

                            <MenuItem
                                x:Name="mnuRoomPower"
                                Header="{i18n:Translate ResourceKey=IsPoweredOn}"
                                IsCheckable="True"
                                IsChecked="{Binding SelectedBulb.IsPoweredOn, Mode=TwoWay}" />

                            <Separator />

                            <MenuItem
                                x:Name="mnuRoomRefresh"
                                Click="mnuRoomRefresh_Click"
                                Header="{i18n:Translate ResourceKey=Refresh}" />

                            <MenuItem
                                x:Name="mnuRoomRefreshAll"
                                Click="mnuRoomRefreshAll_Click"
                                Header="{i18n:Translate ResourceKey=RefreshAll}" />
                        </ContextMenu>
                    </ListView.ContextMenu>

                    <ListView.View>
                        <GridView AllowsColumnReorder="True">
                            <GridViewColumn
                                Width="120"
                                DisplayMemberBinding="{Binding Name}"
                                Header="{i18n:Translate ResourceKey=Name}" />
                            <GridViewColumn
                                Width="120"
                                DisplayMemberBinding="{Binding RoomId}"
                                Header="{i18n:Translate ResourceKey=RoomId}" />
                            <GridViewColumn
                                Width="100"
                                DisplayMemberBinding="{Binding Bulbs.Count}"
                                Header="{i18n:Translate ResourceKey=Bulbs}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
        </TabControl>

        <Border
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="8,4"
            Padding="0"
            BorderBrush="{x:Static SystemColors.ActiveBorderBrush}"
            BorderThickness="1">

            <Grid Height="64">

                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <color:ColorElement
                    x:Name="ColorPicker"
                    Grid.Row="1"
                    Grid.Column="0"
                    ColorHit="ColorPicker_ColorHit"
                    InvertSaturation="True"
                    Mode="LinearHorizontal"
                    SelectedColor="{Binding SelectedColor}" />
            </Grid>
        </Border>

        <ScrollViewer
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="2"
            Margin="0,8">
            <StackPanel
                Grid.Row="1"
                Grid.RowSpan="1"
                Grid.Column="3"
                Margin="16,0"
                VerticalAlignment="Top"
                Orientation="Vertical">

                <Label Content="{i18n:Translate ResourceKey=SelectNetwork, AddColon=True}" />

                <ComboBox
                    x:Name="cbIP"
                    Margin="0,2,0,8"
                    Padding="4"
                    ItemsSource="{Binding Adapters}"
                    SelectedItem="{Binding SelectedAdapter, Mode=TwoWay}"
                    ToolTipService.ShowDuration="5000">

                    <ComboBox.ToolTip>
                        <ToolTip
                            x:Name="ttNet"
                            Content="{Binding NetworkStatus}"
                            Visibility="{Binding ShowNetworkStatus, Mode=TwoWay}" />
                    </ComboBox.ToolTip>

                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="24" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <Grid.ToolTip>
                                    <ToolTip>
                                        <ToolTip.Template>
                                            <ControlTemplate>
                                                <Border
                                                    Background="{x:Static SystemColors.InfoBrush}"
                                                    BorderBrush="Black"
                                                    BorderThickness="1">

                                                    <Grid Margin="2">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                        </Grid.RowDefinitions>

                                                        <Label
                                                            Grid.Row="0"
                                                            Margin="4,2"
                                                            Padding="0"
                                                            Content="{Binding FriendlyName}"
                                                            FontWeight="Bold" />
                                                        <Label
                                                            Grid.Row="1"
                                                            Margin="4,0"
                                                            Padding="0"
                                                            Content="{Binding HasInternet, Converter={StaticResource enumConv}}" />
                                                        <Label
                                                            Grid.Row="2"
                                                            Margin="4,2"
                                                            Padding="0"
                                                            Content="{Binding IPV4Address}" />
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </ToolTip.Template>
                                    </ToolTip>
                                </Grid.ToolTip>

                                <Image
                                    Grid.Column="0"
                                    Margin="4"
                                    Source="{Binding DeviceImage}" />

                                <TextBlock
                                    Grid.Column="1"
                                    Margin="4,2"
                                    Text="{Binding FriendlyName}" />
                            </Grid>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Label Content="{i18n:Translate ResourceKey=TimeoutSeconds, AddColon=True}" />

                <TextBox
                    x:Name="txtTimeout"
                    Margin="0,2,0,8"
                    Padding="4"
                    Text="{Binding Timeout, Mode=TwoWay, Converter={StaticResource intConv}}">

                    <TextBox.ToolTip>
                        <ToolTip
                            x:Name="ttTimeout"
                            Content="{Binding TimeoutStatus}"
                            Visibility="{Binding ShowTimeoutStatus, Mode=TwoWay}" />
                    </TextBox.ToolTip>
                </TextBox>

                <Button
                    x:Name="BtnScan"
                    Click="BtnScan_Click"
                    Content="{i18n:Translate ResourceKey=ScanForBulbs}"
                    IsEnabled="{Binding ButtonsEnabled}" />

                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <CheckBox
                        Margin="0,8,0,8"
                        VerticalAlignment="Center"
                        IsChecked="{Binding AutoWatch, Mode=TwoWay}">
                        <TextBlock VerticalAlignment="Center" Text="{i18n:Translate ResourceKey=LiveMonitor}" />
                    </CheckBox>

                    <TextBlock
                        Grid.Row="1"
                        Margin="0,2,0,8"
                        VerticalAlignment="Center"
                        Text="{i18n:Translate ResourceKey=RefreshInterval,
                                              AddColon=True}" />

                    <TextBox
                        x:Name="txtInterval"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,2,0,8"
                        Padding="4"
                        VerticalAlignment="Center"
                        Text="{Binding Interval, Mode=TwoWay, Converter={StaticResource intConv}}" />
                </Grid>

                <Grid Margin="0,8,0,0" Visibility="{Binding SelectedBulbs, Converter={StaticResource visConv}}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBox
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        Margin="4"
                        Padding="2"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Style="{StaticResource BigEditStyle}"
                        Text="{Binding SelectedBulb.Name, Mode=TwoWay}"
                        Visibility="{Binding SelectedBulbs, Converter={StaticResource nameEdConv}}">

                        <i:Interaction.Behaviors>
                            <behaviors:TextBoxEnterKeyUpdateBehavior CancelFocusReceiver="{x:Reference Name=BulbList}" ReturnFocusReceiver="{x:Reference Name=BulbList}" />
                        </i:Interaction.Behaviors>
                    </TextBox>

                    <Label
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        Margin="4"
                        Padding="2"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Content="{Binding SelectedText}"
                        Style="{StaticResource BigStyle}"
                        Visibility="{Binding SelectedBulbs, Converter={StaticResource nameStatConv}}" />

                    <ComboBox
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Margin="0,2,0,8"
                        Padding="4"
                        ItemsSource="{Binding LightModeList.ModeList}"
                        SelectedItem="{Binding LightModeList.SelectedMode, Mode=TwoWay}">

                        <ComboBox.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.HeaderTemplate>
                                    <DataTemplate>
                                        <Border
                                            Margin="0,2,0,2"
                                            Background="LightSlateGray"
                                            BorderBrush="DarkSlateGray"
                                            BorderThickness="0.75"
                                            Visibility="{Binding Name, Converter={StaticResource emptyVis}}">

                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>

                                                <TextBlock
                                                    Grid.Row="0"
                                                    Padding="4"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Background="Transparent"
                                                    FontFamily="Calibri"
                                                    FontSize="12"
                                                    FontWeight="Bold"
                                                    Foreground="White"
                                                    Text="{Binding Name}" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </GroupStyle.HeaderTemplate>
                            </GroupStyle>
                        </ComboBox.GroupStyle>
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">

                                    <Label
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Content="{Binding Name}" />
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Label
                        Grid.Row="2"
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Content="{i18n:Translate ResourceKey=Brightness}" />

                    <Slider
                        x:Name="Slide"
                        Grid.Row="3"
                        Grid.Column="0"
                        Height="96"
                        Margin="8,0,8,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Stretch"
                        IsSnapToTickEnabled="True"
                        LargeChange="10"
                        Maximum="100"
                        Minimum="10"
                        Orientation="Vertical"
                        SmallChange="1"
                        TickFrequency="1"
                        TickPlacement="BottomRight"
                        Value="{Binding SelectedBrightness}" />

                    <Label
                        Grid.Row="2"
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Content="{i18n:Translate ResourceKey=Speed}" />

                    <Slider
                        x:Name="Speed"
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="8,0,8,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Stretch"
                        IsSnapToTickEnabled="True"
                        LargeChange="20"
                        Maximum="200"
                        Minimum="10"
                        Orientation="Vertical"
                        SmallChange="1"
                        TickFrequency="1"
                        TickPlacement="TopLeft"
                        Value="{Binding SelectedSpeed}" />
                </Grid>

                <Grid Margin="0,8,0,0" Visibility="{Binding SelectedBulbs, Converter={StaticResource visConv}}">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Content="{i18n:Translate ResourceKey=Home,
                                                 AddColon=True}" />

                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Content="{i18n:Translate ResourceKey=Room,
                                                 AddColon=True}" />

                    <TextBox
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="4"
                        Padding="2"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Background="Transparent"
                        BorderThickness="0"
                        Text="{Binding BulbSelectionHome.Name, Mode=TwoWay}"
                        Visibility="{Binding BulbSelectionHome, Converter={StaticResource nameEdConv}}">

                        <i:Interaction.Behaviors>
                            <behaviors:TextBoxEnterKeyUpdateBehavior
                                CancelFocusReceiver="{x:Reference Name=BulbList}"
                                ObservableUpdateProperty="Profile"
                                ReturnFocusReceiver="{x:Reference Name=BulbList}" />
                        </i:Interaction.Behaviors>
                    </TextBox>

                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="4"
                        Padding="2"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Background="Transparent"
                        BorderThickness="0"
                        Text="{Binding BulbSelectionRoom.Name, Mode=TwoWay}"
                        Visibility="{Binding BulbSelectionRoom, Converter={StaticResource nameEdConv}}">

                        <i:Interaction.Behaviors>
                            <behaviors:TextBoxEnterKeyUpdateBehavior
                                CancelFocusReceiver="{x:Reference Name=BulbList}"
                                ObservableUpdateProperty="Profile"
                                ReturnFocusReceiver="{x:Reference Name=BulbList}" />
                        </i:Interaction.Behaviors>
                    </TextBox>
                </Grid>
            </StackPanel>
        </ScrollViewer>
        <StatusBar
            Grid.Row="3"
            Grid.ColumnSpan="4"
            Background="DarkSlateBlue">

            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        x:Name="BulbCounter"
                        Margin="8,2,0,2"
                        Foreground="White"
                        Text="{Binding Bulbs.Count}" />

                    <TextBlock
                        Margin="0,2"
                        Foreground="White"
                        Text=" " />

                    <TextBlock
                        Margin="0,2,8,2"
                        Foreground="White"
                        Text="{i18n:Translate ResourceKey=Bulbs}" />
                </StackPanel>
            </StatusBarItem>
            <Separator />

            <StatusBarItem>

                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        x:Name="ColorLabel"
                        Margin="8,2"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="{i18n:Translate AddColon=True,
                                              ResourceKey=Color}" />

                    <TextBlock
                        x:Name="ColorText"
                        Width="120"
                        Margin="8,2"
                        VerticalAlignment="Center"
                        FontFamily="Consolas"
                        Foreground="White"
                        Text="{Binding ElementName=ColorPicker, Path=SelectedColorName}" />

                    <Label
                        x:Name="ColorSwatch"
                        Width="24"
                        Height="24"
                        VerticalAlignment="Center"
                        Background="{Binding ElementName=ColorPicker, Path=SelectedColor, Converter={StaticResource colorConv}}"
                        BorderBrush="Black"
                        BorderThickness="1" />
                </StackPanel>
            </StatusBarItem>
            <Separator />
            <StatusBarItem
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Right"
                VerticalContentAlignment="Center">

                <controls:FadingTextBlock
                    x:Name="Status"
                    Margin="8,2"
                    Foreground="White"
                    Text="{Binding StatusMessage}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>